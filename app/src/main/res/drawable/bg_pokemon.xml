<!-- res/drawable/circle_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/circle">
        <shape
            android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Circle background color -->
        </shape>
    </item>
    <item
        android:id="@+id/border"
        android:right="2dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape
            android:shape="oval">
            <solid android:color="#000000" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
